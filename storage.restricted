rules_version = '2';
service firebase.storage {
  match /b/{bucket}/o {
    // Allow read access to all files
    match /{allPaths=**} {
      allow read: if true;
      // Only allow write access to authenticated users with specific UID
      allow write: if request.auth != null && request.auth.uid == 'yCIlQwtTw9aPUopRyGKebHyOMu63';
    }
  }
}
